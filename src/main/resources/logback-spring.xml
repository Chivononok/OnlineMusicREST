<?xml version="1.0" encoding="utf-8" ?>
<configuration>

    <appender name="ConsoleLog" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>

                %red(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] -%kvp- %msg %n
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="ConsoleLog" />
    </root>
</configuration>